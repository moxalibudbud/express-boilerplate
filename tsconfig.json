{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@api/*": ["./src/api/*"],
      "@api": ["./src/api"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils"],
      "@scheduled-tasks/*": ["./src/scheduled-tasks/*"],
      "@scheduled-tasks": ["./src/scheduled-tasks"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [],
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  }
}

{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "TS Node Debugger",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "args": [
        "${workspaceFolder}/src/index.ts"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Compiled Debugger",
      "args": [
        "${workspaceFolder}/dist/index.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "TS Jest Debugger",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "--runInBand",
        "--config",
        "${workspaceFolder}/jest.config.js",
        "${workspaceFolder}/tests/unit/date.test.ts" // To test specific file
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"], // Adjust this if your compiled output directory is different
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"]
    }
  ]
}